<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="3dp"
    app:cardElevation="8dp"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="right"
                    android:layout_height="wrap_content">
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/addpsdeleteiconid"
                        android:background="@drawable/dustbinicon"
                        android:gravity="right" />
                </LinearLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter your salary"
                        android:id="@+id/addjsPSaddexprncesalaryid"
                        android:textSize="20sp"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/innertextview"/>
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Company Name"
                        android:textSize="20sp"
                        android:id="@+id/addjsPSaddexprncompnameid"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/innertextview"/>
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Job Profile"
                        android:textSize="20sp"
                        android:id="@+id/addjsPSaddexprnprofileid"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/innertextview"/>
                </android.support.design.widget.TextInputLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="5dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Start Date"
                        android:textSize="20sp"
                        android:layout_weight="0.40"
                        android:textColor="@color/innertextview"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="YY-MM-DD"
                        android:id="@+id/addstartjobdatetxtid"
                        android:layout_weight="0.40"
                        android:textSize="20sp"
                        android:textColor="@color/innertextview"/>
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/addstartjobdateiconid"
                        android:background="@drawable/calendaricon"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="5dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="End Date"
                        android:textSize="20sp"
                        android:layout_weight="0.40"
                        android:textColor="@color/innertextview"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="YY-MM-DD"
                        android:id="@+id/addendjobdatetxtid"
                        android:layout_weight="0.40"
                        android:textSize="20sp"
                        android:textColor="@color/innertextview"/>
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/addendjobdatebtnid"
                        android:background="@drawable/calendaricon"/>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_margin="5dp"
                    android:background="@color/toolcolor"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:layout_margin="5dp"
                        android:id="@+id/addpsstatetextviewid"
                        android:textColor="@color/white"
                        android:text="State :"/>
                    <Spinner
                        android:layout_width="wrap_content"
                        android:id="@+id/addpsexprncestatespnrid"
                        android:scrollbarSize="20sp"
                        android:textAlignment="center"
                        android:backgroundTint="@color/white"
                        android:theme="@android:style/Theme.Holo.Light.DarkActionBar"
                        android:layout_toRightOf="@+id/addpsstatetextviewid"
                        android:layout_alignParentRight="true"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_margin="5dp"
                    android:background="@color/toolcolor"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:layout_margin="5dp"
                        android:id="@+id/addpsdistricttextviewid"
                        android:textColor="@color/white"
                        android:text="District :"/>
                    <Spinner
                        android:layout_width="wrap_content"
                        android:id="@+id/addpsexprncedistrictspnrid"
                        android:scrollbarSize="20sp"
                        android:textAlignment="center"
                        android:backgroundTint="@color/white"
                        android:theme="@android:style/Theme.Holo.Light.DarkActionBar"
                        android:layout_toRightOf="@+id/addpsdistricttextviewid"
                        android:layout_alignParentRight="true"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Job Responsibilities"
                    android:backgroundTint="@color/innertextview"
                    android:id="@+id/addjsPSexprncerespoid"
                    android:textCursorDrawable="@color/innertextview"
                    android:textSize="20sp"
                    android:textColor="@color/innertextview"/>
                </android.support.design.widget.TextInputLayout>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textSize="20sp"
                    android:id="@+id/addjsexpsubmitbtnid"
                    android:textColor="@color/white"
                    android:background="@color/toolcolor"
                    android:text="Update"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

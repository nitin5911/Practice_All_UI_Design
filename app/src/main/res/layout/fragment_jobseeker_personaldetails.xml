<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/jsupmainlayoutid"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.90"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="vertical">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:id="@+id/jsupFnameid"
                    android:textCursorDrawable="@null"
                    android:backgroundTint="@color/innertextview"
                    android:textColor="@color/innertextview"
                    android:hint="First Name"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:id="@+id/jsupMnameid"
                    android:textCursorDrawable="@null"
                    android:backgroundTint="@color/innertextview"
                    android:textColor="@color/innertextview"
                    android:hint="Middle Name"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:id="@+id/jsupLnameid"
                    android:textCursorDrawable="@null"
                    android:backgroundTint="@color/innertextview"
                    android:textColor="@color/innertextview"
                    android:hint="Last Name"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:id="@+id/jsupfatherFnameid"
                    android:textCursorDrawable="@null"
                    android:backgroundTint="@color/innertextview"
                    android:textColor="@color/innertextview"
                    android:hint="Father's Name "/>
                </android.support.design.widget.TextInputLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_margin="5dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="D.O.B :"
                        android:textColor="@color/innertextview"
                        android:textSize="20sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:id="@+id/jsupdatecalendertextid"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:textColor="@color/innertextview"
                        android:hint="YYYY-MM-DD"/>
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:id="@+id/jsupdatecalendericonid"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/calendaricon"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:background="@color/toolcolor"
                    android:layout_margin="5dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:layout_margin="5dp"
                        android:id="@+id/gendertxtid"
                        android:text="Gender :"
                        android:textColor="@color/white"
                        />
                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/jsupgenderspinid"
                        android:scrollbarSize="20dp"
                        android:textAlignment="center"
                        android:layout_toRightOf="@+id/gendertxtid"
                        android:layout_alignParentRight="true"
                        android:backgroundTint="@color/white"
                        android:theme="@android:style/Theme.Holo.Light.DarkActionBar"

                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:background="@color/toolcolor"
                    android:layout_margin="5dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:id="@+id/maritaltxtid"
                        android:layout_margin="5dp"
                        android:text="Marital Status :"
                        android:textColor="@color/white"
                        />
                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/white"
                        android:theme="@android:style/Theme.Holo.Light.DarkActionBar"
                        android:scrollbarSize="20dp"
                        android:textAlignment="center"
                        android:layout_alignParentRight="true"
                        android:layout_toRightOf="@+id/maritaltxtid"
                        android:id="@+id/jsupmaritalspinid" />
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:id="@+id/updatespouselayoutid"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="@color/toolcolor">
                    <TextView
                        android:id="@+id/categoryspintxtid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Category :"
                        android:textColor="@color/white"
                        android:textSize="20sp" />
                    <Spinner
                        android:id="@+id/jsupcategoryspinid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="5dp"
                        android:layout_toRightOf="@+id/categoryspintxtid"
                        android:backgroundTint="@color/white"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:textCursorDrawable="@color/innertextview"
                        android:theme="@android:style/Theme.Holo.Light.DarkActionBar" />
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/roundbtndsgn"
            android:text="Update details"
            android:textSize="20sp"
            android:id="@+id/jsupsubmitbtnid"
            android:textColor="@color/white"/>
    </LinearLayout>
</LinearLayout>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="3dp"
    app:cardElevation="8dp"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="right"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/addpsqualdeleteiconid"
                android:background="@drawable/dustbinicon"
                android:gravity="right" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:background="@color/toolcolor"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Qualification :"
                android:layout_margin="5dp"
                android:id="@+id/qualificationtxtid"
                android:textColor="@color/white"
                android:textSize="20sp"/>
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:theme="@android:style/Theme.Holo.Light.DarkActionBar"
                android:id="@+id/addjobseekqualispnrid"
                android:layout_toRightOf="@+id/qualificationtxtid"
                android:textAlignment="center"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:background="@color/toolcolor"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Specialization"
                android:layout_margin="5dp"
                android:id="@+id/specializationtxtid"
                android:textColor="@color/white"
                android:textSize="20sp"/>
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:backgroundTint="@color/white"
                android:theme="@android:style/Theme.Holo.Light.DarkActionBar"
                android:layout_toRightOf="@id/specializationtxtid"
                android:textAlignment="center"
                android:id="@+id/addjobseekspeclspnrid"
                />
        </RelativeLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Institute"
            android:textSize="20sp"
            android:id="@+id/addinstitutetxtid"
            android:textColorHint="@color/innertextview"
            android:drawableTint="@color/innertextview"
            android:textCursorDrawable="@color/innertextview"
            android:textColor="@color/innertextview"
            android:layout_margin="5dp"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Percentage"
            android:inputType="number"
            android:textSize="20sp"
            android:id="@+id/addpercentagetxtid"
            android:drawableTint="@color/innertextview"
            android:textCursorDrawable="@color/innertextview"
            android:textColor="@color/innertextview"
            android:layout_margin="5dp"/>
        </android.support.design.widget.TextInputLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:background="@color/toolcolor"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Country Id :"
                android:layout_margin="5dp"
                android:id="@+id/countryidtxtid"
                android:textColor="@color/white"
                android:textSize="20sp"/>
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:theme="@android:style/Theme.Holo.Light.DarkActionBar"
                android:id="@+id/addcountryidspnrid"
                android:layout_toRightOf="@+id/countryidtxtid"
                android:textAlignment="center"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:background="@color/toolcolor"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="State Id :"
                android:layout_margin="5dp"
                android:id="@+id/stateidtxtid"
                android:textColor="@color/white"
                android:textSize="20sp"/>
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:theme="@android:style/Theme.Holo.Light.DarkActionBar"
                android:id="@+id/addstateidspnrid"
                android:layout_toRightOf="@+id/stateidtxtid"
                android:textAlignment="center"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:background="@color/toolcolor"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="District Id :"
                android:layout_margin="5dp"
                android:id="@+id/districtidtxtid"
                android:textColor="@color/white"
                android:textSize="20sp"/>
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:theme="@android:style/Theme.Holo.Light.DarkActionBar"
                android:id="@+id/adddistrictspnrid"
                android:layout_toRightOf="@+id/districtidtxtid"
                android:textAlignment="center"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Completion Year"
            android:inputType="number"
            android:textSize="20sp"
            android:id="@+id/addpercmpltyeartxtid"
            android:drawableTint="@color/innertextview"
            android:textCursorDrawable="@color/innertextview"
            android:textColor="@color/innertextview"
            android:layout_margin="5dp"/>
        </android.support.design.widget.TextInputLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update"
            android:layout_weight="0.50"
            android:layout_margin="2dp"
            android:id="@+id/addjobseekqualboxupdateid"
            android:background="@color/toolcolor"
            android:textColor="@color/white"
            android:textSize="20sp"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
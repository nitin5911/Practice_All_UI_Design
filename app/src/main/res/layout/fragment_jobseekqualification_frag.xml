<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.90"
        android:orientation="vertical" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add more"
                android:textStyle="bold"
                android:textColor="@color/innertextview"
                android:textSize="20sp"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/plusbutton"
                android:id="@+id/addquallayouticonid"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/qualaddmorelayoutcontainerid"/>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    app:cardCornerRadius="3dp"
                    app:cardElevation="8dp"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_margin="5dp"
                    android:background="@color/toolcolor"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Qualification :"
                        android:layout_margin="5dp"
                        android:id="@+id/qualificationtxtid"
                        android:textColor="@color/white"
                        android:textSize="20sp"/>
                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/white"
                        android:theme="@android:style/Theme.Holo.Light.DarkActionBar"
                        android:id="@+id/jsPSqualispnrid"
                        android:layout_toRightOf="@+id/qualificationtxtid"
                        android:textAlignment="center"
                        android:layout_alignParentRight="true"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_margin="5dp"
                    android:background="@color/toolcolor"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Specialization"
                        android:layout_margin="5dp"
                        android:id="@+id/specializationtxtid"
                        android:textColor="@color/white"
                        android:textSize="20sp"/>
                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:backgroundTint="@color/white"
                        android:theme="@android:style/Theme.Holo.Light.DarkActionBar"
                        android:layout_toRightOf="@id/specializationtxtid"
                        android:textAlignment="center"
                        android:id="@+id/jsPSspeclztnspnrid" />
                </RelativeLayout>
                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp">
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Enter Institute name"
                                android:id="@+id/jsPSqualinstid"
                                android:textSize="20sp"
                                android:layout_toRightOf="@+id/psqualinsttxtvwid"
                                android:layout_alignParentRight="true"
                                android:textColor="@color/innertextview"/>
                        </android.support.design.widget.TextInputLayout>
                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp">
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Enter Percentage"
                                android:id="@+id/jsPSqualpercntid"
                                android:textSize="20sp"
                                android:layout_toRightOf="@+id/psqualpercnttxtvwid"
                                android:layout_alignParentRight="true"
                                android:textColor="@color/innertextview"/>
                        </android.support.design.widget.TextInputLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_margin="5dp"
                    android:background="@color/toolcolor"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Country:"
                        android:layout_margin="5dp"
                        android:id="@+id/countryidtxtid"
                        android:textColor="@color/white"
                        android:textSize="20sp"/>
                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/white"
                        android:theme="@android:style/Theme.Holo.Light.DarkActionBar"
                        android:id="@+id/jsPSqualcountryspinid"
                        android:layout_toRightOf="@+id/countryidtxtid"
                        android:textAlignment="center"
                        android:layout_alignParentRight="true"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_margin="5dp"
                    android:background="@color/toolcolor"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="State:"
                        android:layout_margin="5dp"
                        android:id="@+id/stateidtxtid"
                        android:textColor="@color/white"
                        android:textSize="20sp"/>
                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/white"
                        android:theme="@android:style/Theme.Holo.Light.DarkActionBar"
                        android:id="@+id/jsPSqualstatespinid"
                        android:layout_toRightOf="@+id/stateidtxtid"
                        android:textAlignment="center"
                        android:layout_alignParentRight="true"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_margin="5dp"
                    android:background="@color/toolcolor"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="District:"
                        android:layout_margin="5dp"
                        android:id="@+id/districtidtxtid"
                        android:textColor="@color/white"
                        android:textSize="20sp"/>
                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/white"
                        android:theme="@android:style/Theme.Holo.Light.DarkActionBar"
                        android:id="@+id/jsPSqualdistrictspinid"
                        android:layout_toRightOf="@+id/districtidtxtid"
                        android:textAlignment="center"
                        android:layout_alignParentRight="true"
                        />
                </RelativeLayout>
                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp">
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="20sp"
                                android:inputType="number"
                                android:id="@+id/psqualicyearshowtxtvwid"
                                android:textColor="@color/innertextview"
                                android:hint="Passout Year"/>
                        </android.support.design.widget.TextInputLayout>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Update"
                        android:id="@+id/jsPSqualiupdatebtnid"
                        android:background="@color/toolcolor"
                        android:textColor="@color/white"
                        android:textSize="20sp"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:id="@+id/spouselayoutid"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp">
        <EditText
            android:id="@+id/spousenameid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/innertextview"
            android:hint="Spouse Name"
            android:scrollbars="horizontal"
            android:textColor="@color/innertextview"
            android:textCursorDrawable="@color/innertextview"
            android:textSize="20sp" />
    </android.support.design.widget.TextInputLayout>
</LinearLayout>
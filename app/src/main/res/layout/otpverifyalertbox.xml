<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="3dp"
        app:cardElevation="8dp"
        android:layout_margin="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Your OTP here"
                android:textSize="20sp"
                android:id="@+id/enterotpetxtid"
                android:textColor="@color/innertextview"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="submit otp"
                android:id="@+id/submitotpbutonid"
                android:background="@color/toolcolor"
                android:textColor="@color/white"
                android:textSize="20sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="OTP Expire time"
                android:gravity="left"
                android:id="@+id/exptimeotptxtvwid"
                android:textColor="@color/black"
                android:textSize="15sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="resend OTP"
                android:id="@+id/resendotptxtvwid"
                android:textAlignment="center"
                android:textColor="@color/blue"
                android:textSize="15sp"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/loginalertboxid"
    android:background="@color/cardcolor"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Company Name"
            android:id="@+id/mapcompnameid"
            android:textSize="20sp"
            android:textColor="@color/innertextview"
            android:gravity="center"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/innertextview"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Company Address"
            android:id="@+id/mapcompaddrsid"
            android:textSize="20sp"
            android:textColor="@color/innertextview"
            android:gravity="center"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/innertextview"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Company Phone number"
            android:id="@+id/mapcompnumid"
            android:textSize="20sp"
            android:textColor="@color/innertextview"
            android:gravity="center"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/innertextview"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/roundbtndsgn"
            android:layout_marginTop="10dp"
            android:textColor="@color/innertextview"
            android:id="@+id/canclemapinfoid"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:text="Ok"
            />
    </LinearLayout>
</LinearLayout>